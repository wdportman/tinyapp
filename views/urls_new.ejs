<!-- The below template displays a submit-new-URL page.-->

<!DOCTYPE html>
<html lang="en">

<head><%- include('./partials/_head.ejs'); %></head>

<body>

  <header><%- include('./partials/_header.ejs'); %></header>

  <main style="margin: 1em;">
    <h3>Create TinyURL</h3>
    <form class="form-inline" action="/urls" method="POST">
      <div class="form-group mb-2">
        <label for="longURL">Enter a URL:</label>
        <input class="form-control" type="text" name="longURL" placeholder="http://" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </main>
  <footer><%- include('./partials/_footer.ejs'); %></footer>
</body>

</html>