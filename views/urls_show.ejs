<!-- The below template displays, for a given short URL, what its corresponding long URL is. It also allows users to edit the long URL.-->

<!DOCTYPE html>
<html lang="en">

<head><%- include('./partials/_head.ejs'); %></head>

<body>
  <header><%- include('./partials/_header.ejs'); %></header>
  <div class="card text-center">
    <div class="card-header"></div>
    <div class="card-body">
      <h5 class="card-title">TinyURL for: <%= longURL %></h5>
      <p class="card-text">Short URL: <a href="/u/<%= shortURL %>"><%= shortURL %></a></p>
      <form class="form-center" method="POST" action="/urls/<%= shortURL %>">
        <div>
          <label for="updatedLongURL">Edit:</label>
          <input class="form-center" type="text" name="updatedLongURL" value="<%= longURL %>"
            style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
    <div class="card-footer text-muted"></div>
  </div>
  <footer><%- include('./partials/_footer.ejs'); %></footer>
</body>

</html>