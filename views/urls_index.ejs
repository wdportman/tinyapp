<!-- The below view shows a listing of all long-and-short URL pairs -->

<!DOCTYPE html>
<html lang="en">

<head><%- include('./partials/_head.ejs'); %></head>

<body>
  <header><%- include('./partials/_header.ejs'); %></header>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url in urls) { %>
        <tr>
          <td><%= url %></td>
          <td><%= urls[url] %></td>
          <td>
            <form method="GET" action="/urls/<%= url %>">
              <button type="submit">Edit</button>
            </form>
          </td>
          <td>
            <form method="POST" action="/urls/<%= url %>/delete">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </main>
  <footer><%- include('./partials/_footer.ejs'); %></footer>
</body>

</html>